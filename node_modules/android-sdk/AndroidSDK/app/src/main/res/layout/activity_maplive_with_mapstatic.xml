<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/engineviews"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10px"
        android:orientation="vertical"
        android:weightSum="1"
        >

        <ScrollView
            android:id="@+id/scrollViewTop"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginBottom="10px"
            android:layout_weight="0.17">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/levelView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="0.5"
                    android:padding="5dip"
                    android:text="Level"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    />

                <ImageView
                    android:id="@+id/mapImageView"
                    android:layout_width="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:layout_height="100dip"
                    android:layout_weight="0.4"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The text directions show up here"
                    android:id="@+id/textDirection"
                    android:scrollbars = "vertical"
                    android:maxLines ="200"/>

            </LinearLayout>
        </ScrollView>

        <!--<com.jibestream.jibestreamandroidlibrary.main.EngineView-->
        <!--android:id="@+id/engineviewB"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0dp"-->
        <!--android:layout_weight="0.2"/>-->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20px"
            android:layout_weight="0.8">

            <com.jibestream.jibestreamandroidlibrary.main.EngineView
                android:id="@+id/engineview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/leftButton"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|bottom"
                        android:text="&lt;"/>

                    <Button
                        android:id="@+id/rightButton"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/levelView"
                        android:layout_gravity="right|bottom"
                        android:text=">"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/zoomOutButton"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|bottom"
                        android:text=" - "/>

                    <Button
                        android:id="@+id/rotateButton"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|bottom"
                        android:text=" o "/>

                    <Button
                        android:id="@+id/zoomInButton"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|bottom"
                        android:text=" + "/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/debugView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:padding="5dip"
                android:text="Small Text"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#444"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dip"
                    android:weightSum="1">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="34.20"
                        android:adjustViewBounds="false"
                        android:src="@drawable/ic_adjust_white_24dp"/>

                    <TextView
                        android:id="@+id/fromView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dip"
                        android:text="From..."
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#ddd"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dip">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_room_white_24dp"/>

                    <TextView
                        android:id="@+id/toView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dip"
                        android:text="To..."
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#ddd"/>
                </LinearLayout>
            </LinearLayout>

        </FrameLayout>

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            >

            <LinearLayout
                android:layout_width="130dip"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                >


<!--                <ToggleButton
                    android:id="@+id/aToggleButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New ToggleButton"/>

                <Button
                    android:id="@+id/frame40percentButton"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[40%]"
                    />-->

                <Button
                    android:id="@+id/framePathButton"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[P]"
                    />

                <Button
                    android:id="@+id/frameMapButton"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[M]"
                    />

                <Button
                    android:id="@+id/frameCustomButton"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="[Custom]"/>

                <Button
                    android:id="@+id/frameRandDestButton"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="[RandDest]"/>

                <Button
                    android:id="@+id/resetCameraButton"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[R]"
                    />

                <Button
                    android:id="@+id/imageButton"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Update Img"
                    />

                <Button
                    android:id="@+id/toClosestAmenityButton"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Clst Amnt"
                    />

                <Button
                    android:id="@+id/highlightUnitButton"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="HLight Unit"/>

                <Button
                    android:id="@+id/highlightCategoryButton"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="HLight Ctg"/>

                <Button
                    android:id="@+id/showTextDirectionsButton"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Text Direct"/>

                <Button
                    android:id="@+id/showZonesButton"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Zones"/>

                <Button
                    android:layout_width="wrap_content"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_height="wrap_content"
                    android:id="@+id/showBlueDot"
                    android:text="Blue Dots"/>

                <Button
                    android:layout_width="wrap_content"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_height="wrap_content"
                    android:id="@+id/frameRandomAmenity"
                    android:text="[RandAmen]"/>
            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>

</FrameLayout>